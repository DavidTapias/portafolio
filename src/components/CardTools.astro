---
export interface props{
    path:string,
    tools:Array<{ image: string; name: string }>;
}
const {path,tools} = Astro.props;
---

<div class="  relative bg-c-white rounded-md shadow-md ">
    <div class="p-6 ">
        <h3 class="font-bold text-2xl text-c-dark-gray">Tecnolog√≠as</h3>
        <div class="grid grid-cols-2 md:grid-cols-8">
            {
            tools.map((tools) => (<figure class="flex flex-col items-center justify-center text-center py-2"><img src={path+tools.image} alt=""/><figcaption class=" text-sm">{tools.name}</figcaption></figure>))}
        
        </div>
    </div>
</div>

